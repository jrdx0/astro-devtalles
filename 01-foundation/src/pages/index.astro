---
import MainLayout from '../layouts/MainLayout.astro';

const name = 'Jared Peña Ochoa';
const title = 'Home Page';
---

<MainLayout title={title}>
	<h1>{ name }</h1>

	<p>Momento actual: { new Date().toLocaleTimeString() }</p>
	<p id="current-time">Momento actual real:</p>

	<footer>
		{ new Date().getFullYear() }
	</footer>

	<script>
		const currentYear: number = new Date().getFullYear();

		const footer = document.querySelector('footer') as HTMLElement;
		footer.innerText = `Año: ${ currentYear }`;

		const currentTime = new Date().toLocaleTimeString();

		const realTime = document.querySelector('#current-time') as HTMLParagraphElement;
		realTime.innerText = `Momento actual real: ${ currentTime }`;
	</script>
</MainLayout>
