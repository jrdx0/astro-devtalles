---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;

const pokemonId = url.split("/").at(-2);

const pokemonImgUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${pokemonId}.png`;
---

<!-- href={`/pokemon/${pokemonId}`} -->
<a
  href={`/pokemons/${name}`}
  class:list={[
    "rounded flex flex-col justify-center items-center p-2",
    { border: !isBig },
  ]}
>
  <img
    transition:name={`${name}-img`}
    src={pokemonImgUrl}
    alt="name"
    class:list={[{ "w-96 h-96": isBig, "w-26 h-26": !isBig }]}
  />
  <span
    class:list={[
      "capitalize",
      {
        "text-3xl": isBig,
      },
    ]}>#{pokemonId} {name}</span
  >
</a>
