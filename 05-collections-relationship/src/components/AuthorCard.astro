---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
---

<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
  <Image
    src={author.data.avatar}
    class="rounded-full mx-auto"
    width={50}
    height={50}
    alt={author.data.name}
  />
  <h2 class="text-center text-2xl font-semibold mt-3">{author.data.name}</h2>
  <p class="text-center text-gray-600 mt-1">{author.data.subtitle}</p>
  <div class="flex justify-center mt-5">
    <a
      href={author.data.twitter}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      Twitter
    </a>
    <a
      href={author.data.linkedIn}
      class="text-blue-500 hover:text-blue-700 mx-3"
    >
      LinkedIn
    </a>
    <a href={author.data.github} class="text-blue-500 hover:text-blue-700 mx-3">
      GitHub
    </a>
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 mt-2">
      {author.data.bio}
    </p>
    <div class="flex justify-end">
      <a href={`/blog/${author.id}`}>Leer m√°s</a>
    </div>
  </div>
</div>
