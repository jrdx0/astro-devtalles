---
import { Image } from "astro:assets";

import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
import { Picture } from "astro:assets";
---

<MainLayout title="Imagenes">
  <h1 class="text-5xl text-white">Im√°genes</h1>
  <img
    loading="eager"
    src="/assets/images/post-05.png"
    width="250"
    height="250"
  />

  <Image src={post05Img} width="250" height="250" alt="Imagen del post" />

  <h1>Resize with styles</h1>
  <Image
    src={post05Img}
    style={{
      width: "250px",
      height: "250px",
    }}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1>Quality low</h1>
  <Image
    src={post05Img}
    quality={"low"}
    style={{
      width: "250px",
      height: "250px",
    }}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1>Formatos</h1>
  <Image
    src={post05Img}
    format="jpg"
    style={{
      width: "250px",
      height: "250px",
    }}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1>Picture</h1>
  <Picture
    src={post05Img}
    formats={["avif", "webp", "jpg"]}
    style={{
      width: "250px",
      height: "250px",
    }}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1>Sized</h1>
  <Picture
    src={post05Img}
    widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
    alt="Imagen del post"
  />

  <h1>Densities</h1>
  <Picture
    src={post05Img}
    width={post05Img.width / 2}
    densities={[1.5, 2]}
    alt="Imagen del post"
  />

  <div
    style={{
      height: "3000px",
    }}
  >
  </div>
  <img
    loading="lazy"
    src="/assets/images/post-01.png"
    width="250"
    height="250"
  />
</MainLayout>

<style>
  h1 {
    color: #fff;
    margin-top: 5rem;
  }
</style>
